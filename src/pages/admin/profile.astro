---
// src/pages/admin/profile.astro
import AdminLayout from "../../components/admin/AdminLayout.astro";
import { getSession } from "../../utils/auth";
import { supabase } from "../../lib/supabase";

const session = await getSession(Astro);
if (!session) {
  return Astro.redirect("/admin/signin");
}
// Only fetch profile data if we have a session
const { data: profile, error: profileError } = session
  ? await supabase
      .from("profile")
      .select(
        `
        id,
        user_id,
        username,
        full_name,
        email,
        role,
        bio,
        created_at,
        updated_at
      `
      )
      .eq("user_id", session.data.session.user.id)
      .single()
  : { data: null, error: null };

if (profileError) {
  console.error("Error fetching profile:", profileError.message);
}

// Fetch user stats
const { count: postsCount } = session
  ? await supabase
      .from("posts")
      .select("id", { count: "exact" })
      .eq("author_id", session.data.session.user.id)
  : { count: 0 };
---

<AdminLayout title="Profile" session={session}>
  <div class="mx-auto max-w-4xl rounded-lg bg-white p-8 shadow-md">
    <div class="flex flex-col items-center gap-8 md:flex-row">
      <!-- Avatar Section -->
      <div class="flex flex-col items-center">
        <button
          id="editProfileBtn"
          class="mt-4 rounded bg-blue-600 px-4 py-2 text-white transition hover:bg-blue-700"
        >
          Edit Profile
        </button>
      </div>

      <!-- User Info Section -->
      <div class="flex-1">
        <div id="profileView">
          <h1 class="text-2xl font-bold text-gray-900">
            {profile?.full_name || "User"}
          </h1>
          <p class="text-gray-600">{profile?.role || "User"}</p>
          <p class="mt-4 text-gray-700">{profile?.bio || "No bio yet"}</p>
        </div>

        <form id="profileForm" class="hidden space-y-4" method="POST">
          <div>
            <label class="block text-sm font-medium text-gray-700"
              >Username</label
            >
            <input
              type="text"
              name="username"
              value={profile?.username || ""}
              class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Email</label>
            <input
              type="email"
              name="email"
              value={profile?.email || ""}
              class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Name</label>
            <input
              type="text"
              name="full_name"
              value={profile?.full_name || ""}
              class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Role</label>
            <input
              type="text"
              name="role"
              value={profile?.role || ""}
              class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Bio</label>
            <textarea
              name="bio"
              class="mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm"
              rows="3">{profile?.bio || ""}</textarea
            >
          </div>
          <div class="flex gap-2">
            <button
              type="submit"
              class="rounded bg-green-600 px-4 py-2 text-white transition hover:bg-green-700"
            >
              Save Changes
            </button>
            <button
              type="button"
              id="cancelBtn"
              class="rounded bg-gray-600 px-4 py-2 text-white transition hover:bg-gray-700"
            >
              Cancel
            </button>
          </div>
        </form>

        <!-- Stats Section -->
        <div class="mt-6 flex gap-8">
          <div class="text-center">
            <div class="text-xl font-bold">{postsCount || 0}</div>
            <div class="text-gray-600">Posts</div>
          </div>
          <div class="text-center">
            <div class="text-xl font-bold text-gray-300">
              {profile?.followers_count || 0}
            </div>
            <!-- Add followers count later -->
            <div class="text-gray-300">Followers</div>
          </div>
          <div class="text-center">
            <div class="text-xl font-bold text-gray-300">
              {profile?.following_count || 0}
            </div>
            <!-- Add following count later -->
            <div class="text-gray-300">Following</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  // Handle form visibility toggling
  const editBtn = document.getElementById("editProfileBtn");
  const cancelBtn = document.getElementById("cancelBtn");
  const profileView = document.getElementById("profileView");
  const profileForm = document.getElementById("profileForm");

  editBtn?.addEventListener("click", () => {
    profileView?.classList.add("hidden");
    profileForm?.classList.remove("hidden");
  });

  cancelBtn?.addEventListener("click", () => {
    profileView?.classList.remove("hidden");
    profileForm?.classList.add("hidden");
  });
</script>
