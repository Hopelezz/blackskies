---
// components/Banner.astro
interface Props {
  type: 'warning' | 'error';
  message: string;
  id?: string;
}

const { type, message, id = `${type}-banner` } = Astro.props;

const styles = {
  warning: {
    container: 'text-yellow-800 border-yellow-300 bg-yellow-50',
    button: 'bg-yellow-50 text-yellow-500 focus:ring-yellow-400 hover:bg-yellow-200'
  },
  error: {
    container: 'text-red-800 border-red-300 bg-red-50',
    button: 'bg-red-50 text-red-500 focus:ring-red-400 hover:bg-red-200'
  }
};
---

<div id={id} class={`flex items-center p-4 mb-4 border-t-4 ${styles[type].container}`}>
  <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z"/>
  </svg>
  <div class="ml-3 text-sm font-medium">
    {message}
  </div>
  <button 
    type="button" 
    class={`ml-auto -mx-1.5 -my-1.5 rounded-lg p-1.5 inline-flex items-center justify-center h-8 w-8 ${styles[type].button}`} 
    data-dismiss-target={`#${id}`} 
    aria-label="Close"
  >
    <span class="sr-only">Close</span>
    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
    </svg>
  </button>
</div>